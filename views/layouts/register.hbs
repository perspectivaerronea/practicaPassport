<body class="bg-light">
    <div class="row justify-content-md-center mt-5">
        <div class="col-10">
            <div class="container mb-10">
                <h1>Registro</h1>    
                <form method="post" class="form-group">               
                    <div class="form-group form-control-md mt-2">
                        <label for="newUser">Usuario:</label><br>
                        <input name="newUser" id="newUser" type="email" required></input><br>
                        <label for="newPassword">Contraseña:</label><br>
                        <input name="newPassword" id="newPassword" required></input>
                    </div>
                    <div class="form-group form-control-md mt-2">
                    <input class="btn btn-primary" type="submit" value="Registrarse">
                    </div>
                </form>   
                <br>
                <a class="btn btn-primary" href="/"><p class="mb-0 align-self-center">Iniciar Sesión</p></a>                              
            </div>
        </div>
    </div>
  </body>
